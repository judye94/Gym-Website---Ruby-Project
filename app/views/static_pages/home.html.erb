<div class="carousel slide" data-ride="carousel" id="my-carousel">
  <!-- indicators -->
  <ol class="carousel-indicators">
    <li data-target="#my-carousel" data-slide-to="0" class="active"></li>
    <li data-target="#my-carousel" data-slide-to="1"></li>
    <li data-target="#my-carousel" data-slide-to="2"></li>
  </ol>
  
  <!-- Wrapper for slides -->
  <div class="carousel-inner" role="listbox">
    <div class="item active">
     <%= link_to image_tag((DynImage.find_by name: 'Slider_Image1').image, alt: (DynImage.find_by name: 'Slider_Image1').alttext)%>
     <div class="container">
            <div class="carousel-caption">
              <h1><%= (DyContent.find_by description: 'Slider_Header0').content %></h1>
              <p><%= (DyContent.find_by description: 'Slider_Paragraph0').content %></p>
              <%= link_to "Sign up now!", 'membership', class: "btn btn-lg btn-primary" %>
            </div>
          </div>
    </div>
    <div class="item">
      <%= link_to image_tag((DynImage.find_by name: 'Slider_Image1').image, alt: (DynImage.find_by name: 'Slider_Image1').alttext)%>
      <div class="container">
            <div class="carousel-caption">
              <h1><%= (DyContent.find_by description: 'Slider_Header1').content %></h1>
              <p><%= (DyContent.find_by description: 'Slider_Paragraph1').content %></p>
               <%= link_to "Learn More", 'contact', class: "btn btn-lg btn-primary" %>
            </div>
    </div>
    </div>
    <div class="item">
     <%= link_to image_tag("img5.jpg")%>
     <div class="container">
            <div class="carousel-caption">
              <h1><%= (DyContent.find_by description: 'Slider_Header2').content %></h1>
              <p><%= (DyContent.find_by description: 'Slider_Paragraph2').content %></p>
               <%= link_to "View Classes", 'classes', class: "btn btn-lg btn-primary" %>
            </div>
          </div>
      </div>
    </div>
    
  <!-- Controls -->
  <a class="left carousel-control" href="#my-carousel" role="button" data-slide="prev">
        <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
      </a>
      <a class="right carousel-control" href="#my-carousel" role="button" data-slide="next">
        <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
      </a>
</div>

